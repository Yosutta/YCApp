<% layout('layouts/boilerplate.ejs') %>
    <div id="cluster-map" class="mb-3"></div>
    <h1>All the campgrounds</h1>
    <a href="/campgrounds/new">Add a new Campground</a>
    <% for(let campground of campgrounds){ %>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <% if(campground.images.length) {%>
                        <img style="max-width: 100%" src="<%= campground.images[0].url %>" alt="">
                        <% } else { %>
                            <img style="max-width: 100%"
                                src="https://res.cloudinary.com/dpishbgcn/image/upload/v1632030170/YelpCamp/photo-1487730116645-74489c95b41b_vt6r76.jpg"
                                alt="">
                            <% } %>
                </div>
                <div class="col-md-8 mt-2">
                    <h5 class="card-title">
                        <%= campground.name %>
                    </h5>
                    <p class="card-text">
                        <%= campground.description %>
                    </p>
                    <p class="text-muted">
                        <small>
                            <%= campground.location %>
                        </small>
                    </p>
                    <a class="btn btn-primary" href="/campgrounds/<%= campground._id %> ">View <%= campground.name %>
                    </a>
                </div>
            </div>
        </div>
        <% } %>
            <script>
                const mapToken = '<%- process.env.MAPBOX_TOKEN %>'
                const campgrounds = '{"features" :<%-JSON.stringify(campgrounds)%>}'
            </script>
            <script src="/js/clusterMap.js"></script>